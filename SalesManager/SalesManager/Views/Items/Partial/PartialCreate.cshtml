@model SalesManager.Models.SaleViewModel

<div class="add-items">
    <div class="form-inline add-item" data-counter="0">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-row">
            <div class="col-12">
                <label asp-for="Products" class="control-label"></label>
                <select asp-for="Sale.Items[0].ProductId" asp-items="@(new SelectList(Model.Products, "Id", "Name"))" class="form-control">
                    <option value="0">Please select one</option>
                </select>
            </div>
            <div class="col">
                <label asp-for="Sale.Items[0].Quantity" class="control-label"></label>
                <input asp-for="Sale.Items[0].Quantity" class="form-control" />
                <span asp-validation-for="Sale.Items[0].Quantity" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="Sale.Items[0].Comment" class="control-label"></label>
                <input asp-for="Sale.Items[0].Comment" class="form-control" />
                <span asp-validation-for="Sale.Items[0].Comment" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="Sale.Items[0].Price" class="control-label"></label>
                <input asp-for="Sale.Items[0].Price" class="form-control" />
                <span asp-validation-for="Sale.Items[0].Price" class="text-danger"></span>
            </div>
            <div class="col">
                <button class="btn btn-remove-item" data-toggle="tooltip" title="Remove Item">
                    <span class="glyphicon glyphicon-minus"></span>
                </button>
            </div>
        </div>
    </div>
</div>
<div class="form-group">
    <input type="button" class="btn btn-add-item" value="Add Item" />
</div>
