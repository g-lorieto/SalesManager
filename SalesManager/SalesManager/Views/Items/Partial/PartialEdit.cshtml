@model SalesManager.Models.SaleViewModel

@for (int i = 0; i < Model.Sale.Items.Count; i++)
{
    <div class="add-items">
        <div class="form-inline add-item" data-counter="0">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Products" class="control-label"></label>
                <select asp-for="Sale.Items[i].ProductId" asp-items="@(new SelectList(Model.Products, "Id", "Name"))" class="form-control resetableSelectOption">
                    <option value="0">Please select one</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Sale.Items[i].Quantity" class="control-label"></label>
                <input asp-for="Sale.Items[i].Quantity" class="form-control resetableInput" />
                <span asp-validation-for="Sale.Items[i].Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sale.Items[i].Comment" class="control-label"></label>
                <input asp-for="Sale.Items[i].Comment" class="form-control resetableInput" />
                <span asp-validation-for="Sale.Items[i].Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sale.Items[i].Price" class="control-label"></label>
                <input asp-for="Sale.Items[i].Price" class="form-control resetableInput" />
                <span asp-validation-for="Sale.Items[i].Price" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Sale.Items[i].Id" class="resetableHidden" />
            <input type="hidden" asp-for="Sale.Items[i].SaleId"/>
            <div class="form-group">
                <button class="btn btn-remove-item" data-toggle="tooltip" title="Remove Item">
                    <span class="glyphicon glyphicon-minus"></span>
                </button>
            </div>
        </div>
    </div>
}
<input type="button" class="btn btn-add-item" value="Add Item" />

